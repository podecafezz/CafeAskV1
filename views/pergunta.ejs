<%- include('./partials/header.ejs') %>
<body>
  <%- include('./partials/navbar.ejs') %>
<div class="container">
    <div class="list_ask">
        <hr class="border-0">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr class="border-0">
          <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label> Resposta:</label>
            <textarea placeholder="Digite sua respota" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark">Responder</button>
          </form>
          <hr>
          <h3>Respostas</h3>
          <hr>
          <% respostas.forEach(resposta => {%>
            <br>
            <div class="card btn-dark">
              <div class="card-body btn-dark">
                <p><%= resposta.corpo %></p>
              </div>
            </div>
          <% }); %>
    </div>
</div>
</body>
<%- include('./partials/footer.ejs') %>
